{
  "info": {
    "name": "SwiftRider API",
    "description": "Postman collection for testing the SwiftRider backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"customer\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Deliveries",
      "item": [
        {
          "name": "Create Delivery Request",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pickup\": \"Lekki Phase 1\",\n  \"dropoff\": \"Ikeja\",\n  \"packageDetails\": \"Laptop\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/deliveries",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "deliveries"]
            }
          }
        },
        {
          "name": "Get My Deliveries",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/deliveries/my",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "deliveries", "my"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Initiate Payment",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"deliveryId\": \"1234567890\",\n  \"amount\": 5000\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/payments/initiate",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "payments", "initiate"]
            }
          }
        },
        {
          "name": "Verify Payment",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/payments/verify/:reference",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "payments", "verify", ":reference"]
            }
          }
        }
      ]
    },
    {
      "name": "Tracking",
      "item": [
        {
          "name": "Update Rider Location",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lat\": 6.5244,\n  \"lng\": 3.3792\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/riders/location",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "riders", "location"]
            }
          }
        },
        {
          "name": "Get Single Rider Location",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/riders/:riderId/location",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "riders", ":riderId", "location"]
            }
          }
        },
        {
          "name": "Get All Rider Locations",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/riders/locations/all",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "riders", "locations", "all"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "users"]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/users/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "users", ":id"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "" }
  ]
}
